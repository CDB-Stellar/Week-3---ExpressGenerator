<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Add page content-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <h1><%= title %></h1>
            
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField"> Book Title </label>
                    <input type="text" class="form-control" 
                    id="nameTextField" placeholder="Enter the book title" 
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField"> Author </label>
                    <input type="text" class="form-control" 
                    id="authorTextField" placeholder="Enter the book author" 
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField"> Year </label>
                    <input type="text" class="form-control" 
                    id="publishedTextField" placeholder="Enter the book publication year" 
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField"> Descripiton </label>
                    <textarea type="text" class="form-control" 
                    id="descriptionTextField" placeholder="Enter a brief descripiton of the book" 
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="costTextField"> Price </label>
                    <input type="number" class="form-control" 
                    id="costTextField" placeholder="Enter the price" 
                    name="cost" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit </button>
                    
                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>